<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svHero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHeroes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/svHero"
        app:layout_constraintStart_toStartOf="parent">


    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/imHero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svHero">

        <ImageView
            android:id="@+id/imageHero"

            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@color/black"
            android:contentDescription="@string/description_of_image_of_super_hero"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="16dp"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/svHero"
            app:layout_constraintVertical_bias="0.03" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitleNameHero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameTitle"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvNameHero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imHero"
        app:layout_constraintTop_toTopOf="@id/imHero"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tvNameHero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvTitleFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imHero"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNameHero"
        app:layout_constraintVertical_bias="0.5"
        tools:text="His Name" />


    <TextView
        android:id="@+id/tvTitleFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_nameTitle"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imHero"
        app:layout_constraintTop_toBottomOf="@id/tvNameHero"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tvTitleAlignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imHero"
        app:layout_constraintTop_toBottomOf="@id/tvTitleFullName"
        app:layout_constraintVertical_bias="0.5"
        tools:text="His Full Name" />

    <TextView
        android:id="@+id/tvTitleAlignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Alignment"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvAlignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imHero"
        app:layout_constraintTop_toBottomOf="@id/tvFullName"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tvAlignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imHero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imHero"
        app:layout_constraintTop_toBottomOf="@id/tvTitleAlignment"
        app:layout_constraintVertical_bias="0.5"
        tools:text="His Alignment" />

</androidx.constraintlayout.widget.ConstraintLayout>